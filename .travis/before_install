#!/bin/bash
set -ev

export UBUNTU_CODENAME=`lsb_release -s -c`
export ROS_VERSION=fuerte

echo "Ubuntu codename: $UBUNTU_CODENAME"
echo "ROS version: $ROS_VERSION"

if `test x$UBUNTU_CODENAME = x`; then
    echo "failed to determine Ubuntu codename"
    return 1
fi
if `test x$UBUNTU_CODENAME = x`; then
    echo "failed to determine ROS version"
    return 1
fi



git submodule update --init --recursive

sudo sh -c "echo \"deb http://packages.ros.org/ros/ubuntu $UBUNTU_CODENAME main\" > /etc/apt/sources.list.d/ros-latest.list"
wget http://packages.ros.org/ros.key -O - | sudo apt-key add -

sudo apt-get update -qq
sudo apt-get install -qq doxygen doxygen-latex libboost-all-dev libeigen3-dev liblapack-dev libblas-dev gfortran python-dev python-sphinx python-numpy


sudo apt-get install ros-$ROS_VERSION-ros ros-$ROS_VERSION-ros-comm ros-$ROS_VERSION-driver-common ros-$ROS_VERSION-geometry ros-$ROS_VERSION-robot-model ros-$ROS_VERSION-common-rosdeps ros-$ROS_VERSION-opencv2 ros-$ROS_VERSION-image-common ros-$ROS_VERSION-image-pipeline ros-$ROS_VERSION-dynamic-reconfigure ros-$ROS_VERSION-nodelet-core ros-$ROS_VERSION-bullet ros-$ROS_VERSION-common-msgs ros-$ROS_VERSION-rosdoc-lite

sudo rosdep init
rosdep update
